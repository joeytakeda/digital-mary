{% extends 'base.html.twig' %}

{% block title %}Category Details {% endblock %}

 {% block pageheader %}
     <h1>Category: {{ category.label }}</h1>
 {% endblock %}

{% block body %}

    {% if is_granted('ROLE_ADMIN') %}
        <div class='btn-toolbar pull-right'>
            <div class='btn-group'>
                <a href="{{ path('category_edit', {'id': category.id }) }}" class="btn btn-default">
                    <span class="glyphicon glyphicon-edit"></span> Edit </a>
            </div>
            <div class='btn-group'>
                <form class='delete-form' method="post" action="{{ path('category_delete', {'id': category.id }) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                    <input type="hidden" name="_method" value="DELETE">
                    <input type="hidden" name="_token" value="{{ csrf_token("delete" ~ category.id) }}">
                    <button class="btn btn-danger"><span class="glyphicon glyphicon-trash"></span> Delete</button>
                </form>
            </div>
        </div>


    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ category.name }}</td>
            </tr>
            <tr>
                <th>Label</th>
                <td>{{ category.label }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ category.description }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{{ category.created|date }}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{{ category.updated|date }}</td>
            </tr>
        </tbody>
    </table>
{% endif %}

    {% include 'item/partial/list.html.twig' with {'items': items} %}

{% endblock %}
