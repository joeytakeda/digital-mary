<table class="table table-bordered table-condensed table-hover table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Label</th>
            <th>Description</th>

        </tr>
    </thead>
    <tbody>
        {% for category in categories %}
            <tr>
                <td>
                    <a href="{{ path('category_show', { 'id': category.id }) }}">
                        {{ category.id }}
                    </a>
                </td>
                <td>
                    {{ category.name }}
                </td>

                <td>
                    {{ category.label }}
                </td>

                <td>
                    {{ category.description|raw }}
                </td>

            </tr>
        {% endfor %}
    </tbody>
</table>
