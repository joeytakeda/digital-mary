{% extends 'base.html.twig' %}

{% block title %}All Categories{% endblock %}

{% block pageheader %}
    <h1>All Categories</h1>
    {% include 'partial/count.html.twig'
        with {'index': categories, 'label': 'categories'} %}
 {% endblock %}

{% block breadcrumb %}
    {% include 'partial/breadcrumb.html.twig' with {
        'content':
        [['Categories']]
    } %}
{% endblock %}

{% block admin %}
    <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            <a href="{{ path('category_new') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-plus"></span> New
            </a>
            <a href="{{ path('category_search') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-search"></span> Search
            </a>
        </div>
    </div>
{% endblock %}


{% block body %}
    <table class="table table-bordered table-condensed table-hover table-striped">
        <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Label</th>
            <th>Description</th>
        </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>
                    <a href="{{ path('category_show', { 'id': category.id }) }}">
                        {{ category.id }}
                    </a>
                </td>
                <td>
                    {{ category.name }}
                </td>
            
                <td>
                    {{ category.label }}
                </td>
            
                <td>
                    {{ category.description }}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(categories) }}
    </div>

{% endblock %}
