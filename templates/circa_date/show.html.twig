{% extends 'base.html.twig' %}

{% block title %}Circa Date Details {% endblock %}

 {% block pageheader %} 
    <h1>Circa Date Details</h1>
 {% endblock %} 

{% block body %}

    {% if is_granted('ROLE_ADMIN') %}
    <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            <a href="{{ path('circa_date_edit', {'id': circa_date.id }) }}" class="btn btn-default">
                <span class="glyphicon glyphicon-edit"></span> Edit
            </a>
        </div>
        <div class='btn-group'>
            <form class='delete-form' method="post" action="{{ path('circa_date_delete', {'id': circa_date.id }) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                <input type="hidden" name="_method" value="DELETE">
                <input type="hidden" name="_token" value="{{ csrf_token("delete" ~ circa_date.id) }}">
                <button class="btn btn-danger"><span class="glyphicon glyphicon-trash"></span> Delete</button>
            </form>
        </div>
    </div>
    {% endif %}

    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>Value</th>
                <td>{{ circa_date.value }}</td>
            </tr>
        <tr>
                <th>Start</th>
                <td>{{ circa_date.start }}</td>
            </tr>
        <tr>
                <th>Start Circa</th>
                <td>{% if circa_date.startCirca %}Yes{% else %}No{% endif %}</td>
            </tr>
        <tr>
                <th>End</th>
                <td>{{ circa_date.end }}</td>
            </tr>
        <tr>
                <th>End Circa</th>
                <td>{% if circa_date.endCirca %}Yes{% else %}No{% endif %}</td>
            </tr>
                <tr>
            <th>Created</th>
            <td>{{ circa_date.created|date }}</td>
        </tr>
        <tr>
            <th>Updated</th>
            <td>{{ circa_date.updated|date }}</td>
        </tr>
        </tbody>
    </table>

{% endblock %}
