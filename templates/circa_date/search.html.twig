{% extends 'base.html.twig' %}

{% block title %}Circa Date Search{% endblock %}

 {% block pageheader %} 
    <h1>Circa Date Search</h1>
    {% if circa_dates|length %}
    <p class="count">
        Displaying {{ circa_dates|length }} circa_dates of {{ circa_dates.getTotalItemCount }} total.
    </p>
	{% endif %}
 {% endblock %} 

{% block body %}

    <form method="get" action="{{ path('circa_date_search') }}" class="form-horizontal">
        <fieldset>
            <legend>Search</legend>
            <div class='form-group'>
                <label class='col-sm-2 control-label' for='q'>Search term</label>
                <div class='col-sm-10'>
                    <div class='input-group'>
                        <input type='text' name='q' id='q' class='form-control' value='{{ q }}'>
                        <span class="input-group-btn">
                            <button class="btn btn-primary" type="submit">
                                <span class='glyphicon glyphicon-search'></span>
                                Search
                            </button>
                        </span>
                    </div>
                </div>
            </div>
            <p>	Full text searching options, if available:</p>
            <ul>
                <li><code>shakespeare</code> - shakespeare should be present, but might not be</li>
                <li><code>shakes*</code> - words starting with shakes should be present</li>
                <li><code>+agnes</code> - agnes must be present</li>
                <li><code>-fisher</code> - fisher must not be present</li>
                <li>Combinations are OK: <code>+agnes -fisher</code> finds Anges who isn't a Fisher</li>
                <li>Phrases are OK: <code>"nee agnes"</code> finds rows that contain the literal phrase.
            </ul>
        </fieldset>
    </form>

	{% if circa_dates|length %}
<table class="table table-bordered table-condensed table-hover table-striped">
    <thead>
        <tr>
            <th>ID</th>
                <th>Value</th>
                <th>Start</th>
                <th>Start Circa</th>
                <th>End</th>
                <th>End Circa</th>
        </tr>
    </thead>
    <tbody>
        {% for circa_date in circa_dates %}
        <tr>

            <td>
                <a href="{{ path('circa_date_show', { 'id': circa_date.id }) }}">
                    {{ circa_date.id }}
                </a>
            </td>
                        <td>
                            {{ circa_date.value }}
                        </td>
                
                        <td>
                            {{ circa_date.start }}
                        </td>
                
                        <td>{% if circa_date.startCirca %}Yes{% else %}No{% endif %}</td>

                    
                
                        <td>
                            {{ circa_date.end }}
                        </td>
                
                        <td>{% if circa_date.endCirca %}Yes{% else %}No{% endif %}</td>

                    
                
        </tr>
        {% endfor %}
    </tbody>
</table>


    <div class="navigation">
        {{ knp_pagination_render(circa_dates) }}
    </div>
	{% endif %}

{% endblock %}

