{% set indexRoute = app.request.attributes.get('_route') %}
{% set showRoute = indexRoute|replace({'_index': '_show'}) %}

<table class="table table-condensed">
    <thead>
        <tr>
            <th>Label</th>
            <th>ID</th>
            <th>Label</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        {% for item in items %}
            <tr>
                <td><a href="{{ path(showRoute, {'id': item.id}) }}">{{ item.label }}</a></td>
                <td>{{ item.id }}</td>
                <td>{{ item.name }}</td>
                <td>{{ item.description|raw }}</td>
            </tr>
        {% endfor %}
    </tbody>
</table>

<div class="navigation">
    {{ knp_pagination_render(items) }}
</div>