{% extends 'base.html.twig' %}

{% block title %}All Languages{% endblock %}

{% block pageheader %}
    <h1>All Languages</h1>
    {% include 'partial/count.html.twig'
        with {'index': languages, 'label': 'languages'} %}
{% endblock %}


{% block admin %}
    <div class='btn-toolbar'>
        <div class='btn-group'>
            <a href="{{ path('language_new') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-plus"></span> New
            </a>
            <a href="{{ path('language_search') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-search"></span> Search
            </a>
        </div>
    </div>
{% endblock %}


{% block body %}
    {% include 'partial/term-table.html.twig' with {'items': languages} %}
{% endblock %}
