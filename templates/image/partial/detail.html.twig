<table class='table table-bordered table-condensed table-hover table-striped'>
    <tbody>
        <tr>
            <th>Public</th>
            <td>
                {% if image.public %}Yes{% else %}No{% endif %}
            </td>
        </tr>
        <tr>
            <th>Original Name</th>
            <td>
                {{ image.originalName }}
            </td>
        </tr>
        <tr>
            <th>Image Path</th>
            <td>
                {{ image.imagePath }}
            </td>
        </tr>
        <tr>
            <th>Thumb Path</th>
            <td>
                {{ image.thumbPath }}
            </td>
        </tr>
        <tr>
            <th>Image Size</th>
            <td>
                {{ image.imageSize }}
            </td>
        </tr>
        <tr>
            <th>Image Width</th>
            <td>
                {{ image.imageWidth }}
            </td>
        </tr>
        <tr>
            <th>Image Height</th>
            <td>
                {{ image.imageHeight }}
            </td>
        </tr>
        <tr>
            <th>Description</th>
            <td>
                {{ image.description|raw }}
            </td>
        </tr>
        <tr>
            <th>License</th>
            <td>
                {{ image.license|raw }}
            </td>
        </tr>

        <tr>
            <th>Item</th>
            <td>
                {% if image.item %}
                    <a href='{{ path("item_show", {"id": image.item.id}) }}'>{{ image.item }}</a>
                {% endif %}
            </td>
        </tr>
        <tr>
            <th>Created</th>
            <td>{{ image.created|date }}</td>
        </tr>
        <tr>
            <th>Updated</th>
            <td>{{ image.updated|date }}</td>
        </tr>
    </tbody>
</table>


