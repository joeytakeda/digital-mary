{{ form_start(form) }}
{% if form.newImageFile is defined%}
    {{ form_row(form.newImageFile) }}
{% endif %}
{{ form_rest(form) }}
<div class="form-group">
    <div class="col-sm-2"></div>
    <div class="col-sm-10">
        <input type="submit" value="Save" class="btn btn-primary" />
        {% if item.id is null %}
            <a href="{{ path('item_index') }}" class="btn btn-warning"> Cancel </a>
        {% else %}
            <a href="{{ path('item_show', { 'id': item.id }) }}" class="btn btn-warning"> Cancel </a>
        {% endif %}
    </div>
</div>
{{ form_end(form) }}
