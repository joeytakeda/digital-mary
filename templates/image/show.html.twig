{% extends 'base.html.twig' %}

{% block title %}Image Details {% endblock %}

 {% block pageheader %}
     <h1>Image Details</h1>
 {% endblock %}

{% block body %}

    {% if is_granted('ROLE_CONTENT_ADMIN') %}
        <div class='btn-toolbar pull-right'>
            <div class='btn-group'>
                <a href="{{ path('item_edit_image', {'id': image.item.id, 'image_id': image.id }) }}" class="btn btn-default">
                    <span class="glyphicon glyphicon-edit"></span> Edit </a>
            </div>
            <div class='btn-group'>
                <form class='delete-form' method="post" action="{{ path('item_delete_image', {'id': image.item.id, 'image_id': image.id }) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                    <input type="hidden" name="_method" value="DELETE">
                    <input type="hidden" name="_token" value="{{ csrf_token("delete" ~ image.id) }}">
                    <button class="btn btn-danger"><span class="glyphicon glyphicon-trash"></span> Delete</button>
                </form>
            </div>
        </div>
        <div class='clearfix'></div>
    {% endif %}

    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>Item</th>
                <td>
                    <a href='{{ path('item_show', {'id': image.item.id}) }}'>
                        {{ image.item }}
                    </a>
                </td>
            </tr>
            <tr>
                <th>Original File Name</th>
                <td>{{ image.originalName }}</td>
            </tr>
            <tr>
                <th>Dimensions</th>
                <td>{{ image.imageWidth }}x{{ image.imageHeight }} pixels</td>
            </tr>
            <tr>
                <th>File Size</th>
                <td>{{ image.imageSize }}</td>
            </tr>
            <tr>
                <th>Public</th>
                <td>{% if image.public %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ image.description|raw }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{{ image.created|date }}</td>
            </tr>

    {% embed 'image/partial/detail.html.twig' %}
    {% endembed %}

{% endblock %}
