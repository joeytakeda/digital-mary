{% extends 'base.html.twig' %}

{% block title %}Image List{% endblock %}

{% block pageheader %}
    <h1>Image List</h1>
    <p class="count">
        Displaying {{ images|length }} images of {{ images.getTotalItemCount }} total.
    </p>
 {% endblock %}

{% block body %}

    <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            <a href="{{ path('image_search') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-search"></span> Search
            </a>
        </div>
    </div>

    <table class="table table-bordered table-condensed table-hover table-striped">
        <thead>
            <tr>
                <th>ID</th>
            </tr>
        </thead>
        <tbody>
        {% for image in images %}
            <tr>

                <td>
                    <a href="{{ path('image_show', { 'id': image.id }) }}">
                        {{ image.id }}
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(images) }}
    </div>

{% endblock %}
