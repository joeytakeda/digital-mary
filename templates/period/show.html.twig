{% extends 'base.html.twig' %}

{% block title %}Period Details {% endblock %}

 {% block pageheader %}
     <h1>Period Details</h1>
 {% endblock %} 

{% block body %}
    {{ dump() }}
    {% if is_granted('ROLE_CONTENT_ADMIN') %}
        <div class='btn-toolbar'>
            <div class='btn-group'>
                <a href="{{ path('period_edit', {'id': period.id }) }}" class="btn btn-default">
                    <span class="glyphicon glyphicon-edit"></span> Edit
                </a>
            </div>
            <div class='btn-group'>
                <form class='delete-form' method="post" action="{{ path('period_delete', {'id': period.id }) }}"
                      onsubmit="return confirm('Are you sure you want to delete this item?');">
                    <input type="hidden" name="_method" value="DELETE">
                    <input type="hidden" name="_token" value="{{ csrf_token("delete" ~ period.id) }}">
                    <button class="btn btn-danger"><span class="glyphicon glyphicon-trash"></span> Delete</button>
                </form>
            </div>
        </div>
    {% endif %}

    {% embed 'period/partial/detail.html.twig' %}
    {% endembed %}


{% endblock %}
