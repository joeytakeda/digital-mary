{% extends 'base.html.twig' %}

{% block title %}Inscription Style List{% endblock %}

{% block pageheader %}
    <h1>Inscription Style List</h1>
    <p class="count">
        Displaying {{ epigraphies|length }} epigraphies of {{ epigraphies.getTotalItemCount }} total.
    </p>
 {% endblock %}

{% block body %}

    <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('inscription_style_new') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-plus"></span> New
            </a>
            {% endif %}

            <a href="{{ path('inscription_style_search') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-search"></span> Search
            </a>
        </div>
    </div>

    <table class="table table-bordered table-condensed table-hover table-striped">
        <thead>
            <tr>
                <th>ID</th>                                           <th>Name</th>
                                                               <th>Label</th>
                                                               <th>Description</th>

            </tr>
        </thead>
        <tbody>
        {% for inscription_style in epigraphies %}
            <tr>

                <td>
                    <a href="{{ path('inscription_style_show', { 'id': inscription_style.id }) }}">
                        {{ inscription_style.id }}
                    </a>
                </td>
                <td>
                    {{ inscription_style.name }}
                </td>

                <td>
                    {{ inscription_style.label }}
                </td>

                <td>
                    {{ inscription_style.description }}
                </td>

            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(epigraphies) }}
    </div>

{% endblock %}
