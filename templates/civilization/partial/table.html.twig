<table class="table table-bordered table-condensed table-hover table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Label</th>
            <th>Description</th>

        </tr>
    </thead>
    <tbody>
        {% for civilization in civilizations %}
            <tr>
                <td>
                    <a href="{{ path('civilization_show', { 'id': civilization.id }) }}">
                        {{ civilization.id }}
                    </a>
                </td>
                <td>
                    {{ civilization.name }}
                </td>

                <td>
                    {{ civilization.label }}
                </td>

                <td>
                    {{ civilization.description|raw }}
                </td>

            </tr>
        {% endfor %}
    </tbody>
</table>
