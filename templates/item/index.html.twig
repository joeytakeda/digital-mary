{% extends 'base.html.twig' %}

{% block title %}Item List{% endblock %}

{% block pageheader %}
    <h1>Item List</h1>
    <p class="count">
        Displaying {{ items|length }} items of {{ items.getTotalItemCount }} total.
    </p>
{% endblock %}

{% block body %}

    <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('item_new') }}" class="btn btn-default"> <span class="glyphicon glyphicon-plus"></span>
                    New </a>
            {% endif %}

            <a href="{{ path('item_search') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-search"></span> Search </a>
        </div>
    </div>

    <table class="table table-bordered table-condensed table-hover table-striped">
        <thead>
            <tr>
                <th>Preview</th>
                <th>Name</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            {% for item in items %}
                <tr>
                    <td>
                        {% if item.images|length > 0 %}
                            <a href='{{ path('item_show', {'id': item.id}) }}'>
                                <img class='thumbnail thumbnail-small'  src='{{ path('item_image_thumbnail', {'id': item.id, 'image_id': item.images[0].id}) }}'>
                            </a>
                        {% endif %}
                    </td>
                    <td>
                        <a href="{{ path('item_show', { 'id': item.id }) }}">
                            {{ item.name }}
                        </a>
                    </td>
                    <td>
                        {{ item.description|raw }}
                    </td>

                </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(items) }}
    </div>

{% endblock %}
