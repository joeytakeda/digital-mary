<table class="table table-bordered table-condensed table-hover table-striped">
    <thead>
        <tr>
            <th>Image</th>
            <th>Name</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        {% for item in items %}
            <tr>
                <td>
                    {% set image = item.images|first %}
                    {% if image  %}
                        <img src='{{ path('item_image_thumbnail', {'id': item.id, 'image_id': image.id}) }}' width='100'>
                    {% endif %}
                </td>
                <td>
                    <a href="{{ path('item_show', { 'id': item.id }) }}">
                        {{ item.name }}
                    </a>
                </td>
                <td>
                    {{ item.description|raw }}
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
