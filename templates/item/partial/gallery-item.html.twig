

{%  if item is defined %}
    {% set path = path('item_show', {'id': item.id}) %}
    {% set img = asset('images/no-img.svg') %}
    {% set desc = item.name %}
    {% if item.images | length > 0 %}
        {% set img = path('item_image_thumbnail', {'id': item.id, 'image_id': item.images[0].id})   %}
    {% endif %}
{% endif %}


<div class="item">
    <a href="{{ path }}">
        <div class="item-img-wrapper">
            <img src="{{ img }}" alt="{{ desc|default('No image available') }}" class="lazy"/>
        </div>
        {% if item is defined and item.name is defined %}
            <div class="item-content-wrapper">
                <h2>{{ desc }}</h2>
            </div>
        {% endif %}
    </a>
</div>