{% extends 'base.html.twig' %}

{% block title %}Remote Image Details {% endblock %}

 {% block pageheader %}
     <h1>Remote Image Details</h1>
 {% endblock %} 

{% block body %}

    {% if is_granted('ROLE_ADMIN') %}
        <div class='btn-toolbar'>
            <div class='btn-group'>
                <a href="{{ path('remote_image_edit', {'id': remote_image.id }) }}" class="btn btn-default">
                    <span class="glyphicon glyphicon-edit"></span> Edit
                </a>
            </div>
            <div class='btn-group'>
                <form class='delete-form' method="post"
                      action="{{ path('remote_image_delete', {'id': remote_image.id }) }}"
                      onsubmit="return confirm('Are you sure you want to delete this item?');">
                    <input type="hidden" name="_method" value="DELETE">
                    <input type="hidden" name="_token" value="{{ csrf_token("delete" ~ remote_image.id) }}">
                    <button class="btn btn-danger"><span class="glyphicon glyphicon-trash"></span> Delete</button>
                </form>
            </div>
        </div>
    {% endif %}

    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
        <tr>
            <th>Url</th>
            <td>{{ remote_image.url }}</td>
        </tr>
        <tr>
            <th>Title</th>
            <td>{{ remote_image.title }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ remote_image.description }}</td>
        </tr>
        <tr>
            <th>Created</th>
            <td>{{ remote_image.created|date }}</td>
        </tr>
        <tr>
            <th>Updated</th>
            <td>{{ remote_image.updated|date }}</td>
        </tr>
        </tbody>
    </table>

{% endblock %}
