{% extends 'base.html.twig' %}

{% block title %}Materials{% endblock %}

{% block pageheader %}
    <h1>Materials</h1>
    <p class="count">
        Displaying {{ materials|length }} materials of {{ materials.getTotalItemCount }} total.
    </p>
{% endblock %}

{% block admin %}
    <div class='btn-toolbar'>
        <div class='btn-group'>
            <a href="{{ path('material_new') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-plus"></span> New
            </a>
            <a href="{{ path('material_search') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-search"></span> Search
            </a>
        </div>
    </div>
{% endblock %}

{% block body %}
    {% include 'partial/term-table.html.twig' with {'items': materials} %}
{% endblock %}
