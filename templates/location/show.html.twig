{% extends 'base.html.twig' %}

{% block title %}Location Details {% endblock %}

 {% block pageheader %}
    <h1>Location Details</h1>
 {% endblock %}

{% block body %}

    {% if is_granted('ROLE_ADMIN') %}
    <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            <a href="{{ path('location_edit', {'id': location.id }) }}" class="btn btn-default">
                <span class="glyphicon glyphicon-edit"></span> Edit
            </a>
        </div>
        <div class='btn-group'>
            <form class='delete-form' method="post" action="{{ path('location_delete', {'id': location.id }) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                <input type="hidden" name="_method" value="DELETE">
                <input type="hidden" name="_token" value="{{ csrf_token("delete" ~ location.id) }}">
                <button class="btn btn-danger"><span class="glyphicon glyphicon-trash"></span> Delete</button>
            </form>
        </div>
    </div>
    {% endif %}

    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
                    <tr>
            <th>Created</th>
            <td>{{ location.created|date }}</td>
        </tr>
        <tr>
            <th>Updated</th>
            <td>{{ location.updated|date }}</td>
        </tr>
        </tbody>
    </table>

    {% include 'item/partial/list.html.twig' with {'items': itemsFound, 'head': 'Items Found'} %}

    {% include 'item/partial/list.html.twig' with {'items': itemsProvenanced, 'head': 'Items Provanced'} %}

{% endblock %}
