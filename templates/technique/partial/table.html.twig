<table class="table table-bordered table-condensed table-hover table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Label</th>
            <th>Description</th>

        </tr>
    </thead>
    <tbody>
        {% for technique in techniques %}
            <tr>
                <td>
                    <a href="{{ path('technique_show', { 'id': technique.id }) }}">
                        {{ technique.id }}
                    </a>
                </td>
                <td>
                    {{ technique.name }}
                </td>

                <td>
                    {{ technique.label }}
                </td>

                <td>
                    {{ technique.description|raw }}
                </td>

            </tr>
        {% endfor %}
    </tbody>
</table>
